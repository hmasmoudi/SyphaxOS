# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libXt
pkgver=1.1.5
pkgrel=1
pkgdesc="The Xorg libraries provide library routines that are used within all X Window applications."
arch=('x86_64')
url="http://ftp.x.org/pub/individual/lib"
install=$pkgname.install
license=('GPL')
groups=('core')
source=("$url/${pkgname}-${pkgver}.tar.bz2")
md5sums=('8f5b5576fbabba29a05f3ca2226f74d3')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
}

build() {
   cd "$srcdir/$pkgname-$pkgver"
   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREFIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"
   
   ./configure $XORG_CONFIG --with-appdefaultdir=/etc/X11/app-defaults
   
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   
   #Make the package
   make DESTDIR="$pkgdir" install
}

