# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-themes-standard
pkgver=3.20.2
pkgrel=1
pkgdesc="The GNOME Themes Standard package contains various components of the default GNOME theme."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-themes-standard/3.20"
license=('GPL')
groups=('core')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('adc3b1d57330561fea524842d0c0b485')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

