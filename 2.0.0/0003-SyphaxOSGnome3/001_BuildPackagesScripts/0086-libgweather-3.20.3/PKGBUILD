# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libgweather
pkgver=3.20.3
pkgrel=1
pkgdesc="The libgweather package is a library used to access weather information from online services for numerous locations."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libgweather/3.20"
license=('GPL')
groups=('core')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('abf0e93b044699d185ef0b7353b1c8e6')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

