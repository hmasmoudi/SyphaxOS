# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=glibmm
pkgver=2.48.1
pkgrel=1
pkgdesc="The GLibmm package is a set of C++ bindings for GLib. "
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/glibmm/2.48"
license=('GPL')
groups=('core')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('f08b2c7f09b984b0df05f0bf4d20ad11')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -e '/^libdocdir =/ s/$(book_name)/glibmm-2.48.1/' \
       -i docs/Makefile.in
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

