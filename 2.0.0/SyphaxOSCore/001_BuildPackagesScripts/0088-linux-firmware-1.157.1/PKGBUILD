# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=linux-firmware
pkgver=1.157.5
pkgrel=1
pkgdesc="The Linux package contains the Linux kernel firmwares."
arch=('x86_64')
url="https://launchpad.net/ubuntu/+archive/primary/+files"
license=('GPL')
groups=('core')
source=("$url/linux-firmware_1.157.5.tar.gz")
md5sums=('682fea3c5ca3b50dd8d7a305e80f735f')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname"
}

build() {
   cd "$srcdir/$pkgname"
}

package() {
   cd "$srcdir/$pkgname"

   mkdir -pv $pkgdir/lib/firmware/

   cp -rf ../linux-firmware/* $pkgdir/lib/firmware/
   cp -rf ../../iwlwifi-7260-17.ucode $pkgdir/lib/firmware/
}

