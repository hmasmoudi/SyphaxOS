# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=flex
pkgver=2.6.0
pkgrel=1
pkgdesc="flex"
arch=('x86_64')
url="http://prdownloads.sourceforge.net/flex"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.xz")
md5sums=('3cbbfa1554d0b75fad9f8100732454de')
depends=('rootfs>=1.0.0')

prepare() {
        cd "$srcdir/$pkgname-$pkgver"
}

build() {
        cd "$srcdir/$pkgname-$pkgver"
        ./configure --prefix=/usr --docdir=/usr/share/doc/flex-2.6.0
        make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"
        
        make DESTDIR="$pkgdir/" install
        ln -sv flex $pkgdir/usr/bin/lex
}
