# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=grub
pkgver=2.02~beta3
pkgrel=1
pkgdesc="groff"
arch=('x86_64')
url="http://alpha.gnu.org/gnu/grub"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.xz")
md5sums=('ab399fc6f74a97d66ff77f04b743149c')
depends=('rootfs>=1.0.0')

prepare() {
        cd "$srcdir/$pkgname-$pkgver"
}

build() {
        cd "$srcdir/$pkgname-$pkgver"

        ./configure --prefix=/usr          \
                    --sbindir=/sbin        \
                    --sysconfdir=/etc      \
                    --disable-grub-emu-usb \
                    --disable-efiemu       \
                    --disable-werror

        make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"
        
        make DESTDIR="$pkgdir" install
}
