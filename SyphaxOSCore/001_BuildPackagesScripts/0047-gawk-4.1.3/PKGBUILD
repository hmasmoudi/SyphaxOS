# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gawk
pkgver=4.1.3
pkgrel=1
pkgdesc="The Gawk package contains programs for manipulating text files."
arch=('x86_64')
url="http://ftp.gnu.org/gnu/gawk"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.xz")
md5sums=('97f8f44149ea9b9e94be97f68988be87')
depends=('rootfs>=1.0.0')

prepare() {
        cd "$srcdir/$pkgname-$pkgver"
}

build() {
        cd "$srcdir/$pkgname-$pkgver"

        ./configure --prefix=/usr

        make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"
        
        make DESTDIR="$pkgdir" install

        mkdir -pv $pkgdir/usr/share/doc/gawk-4.1.3
        cp    -v doc/{awkforai.txt,*.{eps,pdf,jpg}} $pkgdir/usr/share/doc/gawk-4.1.3
}
