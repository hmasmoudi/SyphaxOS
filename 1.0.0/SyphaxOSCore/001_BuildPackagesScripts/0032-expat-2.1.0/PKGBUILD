# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=expat
pkgver=2.1.0
pkgrel=1
pkgdesc="The Expat package contains a stream oriented C library for parsing XML."
arch=('x86_64')
url="http://prdownloads.sourceforge.net/expat"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.gz")
md5sums=('dd7dab7a5fea97d2a6a43f511449b7cd')
depends=('rootfs>=1.0.0')

prepare() {
        cd "$srcdir/$pkgname-$pkgver"
}

build() {
        cd "$srcdir/$pkgname-$pkgver"

        ./configure --prefix=/usr --disable-static

        make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"
        
        make DESTDIR="$pkgdir/" install

        install -v -dm755 $pkgdir/usr/share/doc/expat-2.1.0
        install -v -m644 doc/*.{html,png,css} $pkgdir/usr/share/doc/expat-2.1.0
}
