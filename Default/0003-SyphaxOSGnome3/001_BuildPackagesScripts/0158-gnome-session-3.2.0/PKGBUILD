# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-session
pkgver=3.20.2
pkgrel=1
pkgdesc="The GNOME Session package contains the GNOME session manager."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.20"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('f2f71b012bae9f3a17b54b6384bc345a')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --docdir=/usr/share/doc/gnome-session-3.20.2

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

