# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gvfs
pkgver=1.30.4
pkgrel=1
pkgdesc="The Gvfs package is a userspace virtual filesystem designed to work with the I/O abstractions of GLib's GIO library."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gvfs/1.30"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('981e0aca7f4e2e99860137f9fd99c335fa72a764156d253caf1069380a8e3afa')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --disable-gphoto2
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
   
   chmod 700 "$pkgdir"/usr/share/polkit-1/rules.d
}

