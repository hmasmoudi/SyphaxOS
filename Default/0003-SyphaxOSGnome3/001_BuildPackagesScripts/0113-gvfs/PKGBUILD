# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gvfs
pkgver=1.36.0
pkgrel=2
pkgdesc="The Gvfs package is a userspace virtual filesystem designed to work with the I/O abstractions of GLib's GIO library."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gvfs/1.36"
license=('GPL')
groups=('gnome')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9ec388afeb373a213f2cc489184f76a17ae273a000e8a4ec720c1995943256bb')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   NOCONFIGURE=1 ./autogen.sh
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --disable-gphoto2
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
   
   chmod 700 "$pkgdir"/usr/share/polkit-1/rules.d
}

