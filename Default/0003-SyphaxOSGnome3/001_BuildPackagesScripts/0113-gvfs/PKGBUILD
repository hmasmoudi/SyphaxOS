# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gvfs
pkgver=1.33.3
pkgrel=1
pkgdesc="The Gvfs package is a userspace virtual filesystem designed to work with the I/O abstractions of GLib's GIO library."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gvfs/1.33"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9edf5c0fb159f9805d811bb0d319d09c10ad0fd7b03b58c1b358dbbe1ae1ae09')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --disable-gphoto2
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
   
   chmod 700 "$pkgdir"/usr/share/polkit-1/rules.d
}

