# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gvfs
pkgver=1.34.2
pkgrel=2
pkgdesc="The Gvfs package is a userspace virtual filesystem designed to work with the I/O abstractions of GLib's GIO library."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gvfs/1.34"
license=('GPL')
groups=('gnome')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('60d3c7eaf3dc697653b330b55b806ab0a59424030954628eb5ed88e8ea3a9669')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --disable-gphoto2
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
   
   chmod 700 "$pkgdir"/usr/share/polkit-1/rules.d
}

