# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.44.3
pkgrel=1
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/vte/0.44"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e6dd09d9497aa899d06439272a641d19f0024abaa7e177de88a2ef4d3d0ccffe')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i '/Werror/d' configure.ac
   autoreconf
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --disable-static       \
               --enable-introspection

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

