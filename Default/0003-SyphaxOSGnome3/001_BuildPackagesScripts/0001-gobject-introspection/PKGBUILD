# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gobject-introspection
pkgver=1.52.1
pkgrel=1
pkgdesc="The GObject Introspection is used to describe the program APIs and collect them in a uniform, machine readable format."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gobject-introspection/1.52"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('2ed0c38d52fe1aa6fc4def0c868fe481cb87b532fc694756b26d6cfab29faff4')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

