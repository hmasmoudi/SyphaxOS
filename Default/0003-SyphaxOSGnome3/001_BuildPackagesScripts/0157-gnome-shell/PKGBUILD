# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-shell
pkgver=3.26.2
pkgrel=6
pkgdesc="The GNOME Shell is the desktop user interface of the GNOME Desktop environment."
arch=('x86_64')
url="https://ftp.gnome.org/pub/gnome/sources/gnome-shell/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e5a87f2f838d981db9823352b90b2ce2f40d24d31ed9f062dccfa41b820e0b1c')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
  # sed -i "/seems to be moved/s/^/#/" config/ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr \
               --disable-compile-warnings \
               --enable-browser-plugin

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

