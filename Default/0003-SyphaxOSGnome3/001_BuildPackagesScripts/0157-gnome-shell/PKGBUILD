# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-shell
pkgver=3.28.0
pkgrel=2
pkgdesc="The GNOME Shell is the desktop user interface of the GNOME Desktop environment."
arch=('x86_64')
url="https://ftp.gnome.org/pub/gnome/sources/gnome-shell/3.28"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c7dec00d3c2b26e16611aac99630e3d41842179e9ec30cc873233b56c080ba4e')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   meson build --prefix=/usr -Denable-browser-plugin=true 
   ninja -C build
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   DESTDIR="${pkgdir}" ninja -C build install
}

