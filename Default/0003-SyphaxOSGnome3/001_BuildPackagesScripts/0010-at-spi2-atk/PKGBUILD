# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=at-spi2-atk
pkgver=2.26.0
pkgrel=4
pkgdesc="The At-Spi2 Atk package contains a library that bridges ATK to At-Spi2 D-Bus service."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/at-spi2-atk/2.26"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('d25e528e1406a10c7d9b675aa15e638bcbf0a122ca3681f655a30cce83272fb9')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   sed -i "/seems to be moved/s/^/#/" config/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

