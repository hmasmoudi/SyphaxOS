# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=at-spi2-core
pkgver=2.24.0
pkgrel=1
pkgdesc="The At-Spi2 Core package is a part of the GNOME Accessibility Project."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/at-spi2-core/2.24"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('6179f314fbd903b3cd3477a57b6b1fecca88b76ce769ce777fda0d3e5f61afcd')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --sysconfdir=/etc

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

