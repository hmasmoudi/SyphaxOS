# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=at-spi2-core
pkgver=2.24.1
pkgrel=1
pkgdesc="The At-Spi2 Core package is a part of the GNOME Accessibility Project."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/at-spi2-core/2.24"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('1e90d064b937aacfe79a96232ac7e63d28d716e85bd9ff4333f865305a959b5b')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --sysconfdir=/etc

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

