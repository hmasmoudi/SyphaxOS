# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libjpeg-turbo
pkgver=1.5.2
pkgrel=4
pkgdesc="libjpeg-turbo is a fork of the original IJG libjpeg which uses SIMD to accelerate baseline JPEG compression and decompression."
arch=('x86_64')
url="http://downloads.sourceforge.net/libjpeg-turbo"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.gz")
sha256sums=('9098943b270388727ae61de82adec73cf9f0dbb240b3bc8b172595ebf405b528')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr           \
               --mandir=/usr/share/man \
               --with-jpeg8            \
               --without-simd          \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

