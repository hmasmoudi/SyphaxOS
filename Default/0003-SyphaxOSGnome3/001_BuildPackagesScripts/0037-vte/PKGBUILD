# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.52.0
pkgrel=2
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="https://ftp.gnome.org/pub/gnome/sources/vte/0.52"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d5ae72dddd57af493afa10ca2a290f284e588021b0bd8aaaa63dbb75de7c0567')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   NOCONFIGURE=1 ./autogen.sh
   
   sed -i '/Werror/d' configure.ac
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --enable-introspection \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

