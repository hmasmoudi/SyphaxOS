# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.50.2
pkgrel=4
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/vte/0.50"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('79dd316bfaff48f2fb74d066baae0d830e1f44436796fe410a57297e5c5f09cf')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   NOCONFIGURE=1 ./autogen.sh
   
   sed -i '/Werror/d' configure.ac
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --enable-introspection \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

