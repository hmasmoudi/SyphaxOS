# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.50.0
pkgrel=4
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/vte/0.50"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('b893ae819c77857e4f4b059e7b4b8a9a49efa397cf548d91e8e02ebe30f09656')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   NOCONFIGURE=1 ./autogen.sh
   
   sed -i '/Werror/d' configure.ac
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --enable-introspection \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

