# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.48.2
pkgrel=1
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/vte/0.48"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c278b301edfe38b43baec1bccc86e225dacea5b670a96ca7ea55ca9a4b030690')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   NOCONFIGURE=1 ./autogen.sh
   
   sed -i '/Werror/d' configure.ac
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --enable-introspection \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

