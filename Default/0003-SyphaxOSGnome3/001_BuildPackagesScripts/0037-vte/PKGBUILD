# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=vte
pkgver=0.48.1
pkgrel=1
pkgdesc="The VTE package contains a termcap file implementation for terminal emulators."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/vte/0.48"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d3b7d6a13e6b850f3ea1c35af2746ef78039493ed4bb87cb7a36f29b260861f6')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   NOCONFIGURE=1 ./autogen.sh
   
   sed -i '/Werror/d' configure.ac
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr          \
               --sysconfdir=/etc      \
               --disable-static       \
               --enable-introspection

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

