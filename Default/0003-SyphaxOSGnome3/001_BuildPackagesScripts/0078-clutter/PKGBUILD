# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=clutter
pkgver=1.26.2
pkgrel=6
pkgdesc="The Clutter package contains an open source software library used for creating fast, visually rich and animated graphical user interfaces."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/clutter/1.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e7233314983055e9018f94f56882e29e7fc34d8d35de030789fdcd9b2d0e2e56')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr               \
               --sysconfdir=/etc           \
               --enable-introspection      \
               --enable-egl-backend        \
               --enable-evdev-input        \
               --enable-wayland-backend    \
               --enable-gdk-backend        \
               --enable-x11-backend        \
               --enable-wayland-compositor
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

