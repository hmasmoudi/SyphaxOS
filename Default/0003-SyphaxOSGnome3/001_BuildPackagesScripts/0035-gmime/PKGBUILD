# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gmime
pkgver=3.0.4
pkgrel=2
pkgdesc="The GMime package contains a set of utilities for parsing and creating messages using the Multipurpose Internet Mail Extension (MIME) as defined by the applicable RFCs."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gmime/3.0"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('b67f9b76925644afed4ad2347402b748fc279fcfe87d73f3fd816b3f991942c8')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

