# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-keyring
pkgver=3.20.1
pkgrel=4
pkgdesc="The GNOME Keyring package contains a daemon that keeps passwords and other secrets for users."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-keyring/3.20"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('97964e723f454be509c956ed5e38b5c2fd7363f43bd3f153b94a4a63eb888c8c')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i -r 's:"(/desktop):"/org/gnome\1:' schema/*.xml
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --with-pam-dir=/lib/security
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

