# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-keyring
pkgver=3.28.0.1
pkgrel=2
pkgdesc="The GNOME Keyring package contains a daemon that keeps passwords and other secrets for users."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-keyring/3.28"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d17c996f0917d9fb9d86492d8ff6e834fe76e3231ec355f7016b29d2f960bd63')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i -r 's:"(/desktop):"/org/gnome\1:' schema/*.xml
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr     \
               --sysconfdir=/etc \
               --with-pam-dir=/lib/security
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

