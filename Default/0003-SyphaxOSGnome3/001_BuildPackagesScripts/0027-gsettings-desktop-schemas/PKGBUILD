# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gsettings-desktop-schemas
pkgver=3.24.0
pkgrel=0
pkgdesc="The GSettings Desktop Schemas package contains a collection of GSettings schemas for settings shared by various components of a GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gsettings-desktop-schemas/3.24"
install=$pkgname.install
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('f6573a3f661d22ff8a001cc2421d8647717f1c0e697e342d03c6102f29bbbb90')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i -r 's:"(/system):"/org/gnome\1:g' schemas/*.in
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

