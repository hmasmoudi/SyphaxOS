# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=glib-networking
pkgver=2.54.1
pkgrel=2
pkgdesc="The GLib Networking package contains Network related gio modules for GLib."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/glib-networking/2.54"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('eaa787b653015a0de31c928e9a17eb57b4ce23c8cf6f277afaec0d685335012f')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr                                 \
               --with-ca-certificates=/etc/ssl/ca-bundle.crt \
               --disable-static

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

