# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libgweather
pkgver=3.24.0
pkgrel=1
pkgdesc="The libgweather package is a library used to access weather information from online services for numerous locations."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libgweather/3.24"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('1089b932205085add19e5e1b63361c0cff1a2c46a67ab2dded6dd2ca87bdfa3d')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

