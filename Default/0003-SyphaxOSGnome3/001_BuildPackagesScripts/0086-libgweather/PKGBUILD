# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libgweather
pkgver=3.28.1
pkgrel=2
pkgdesc="The libgweather package is a library used to access weather information from online services for numerous locations."
arch=('x86_64')
url="https://ftp.gnome.org/pub/gnome/sources/libgweather/3.28"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('157a8388532a751b36befff424b11ed913b2c43689b62cd2060f6847eb730be3')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   meson build --prefix=/usr
   ninja -C build
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"

   DESTDIR="${pkgdir}" ninja -C build install
}

