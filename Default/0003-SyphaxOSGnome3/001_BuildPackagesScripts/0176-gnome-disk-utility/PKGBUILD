# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-disk-utility
pkgver=3.26.0
pkgrel=4
pkgdesc="The GNOME Disk Utility package provides applications used for dealing with storage devices."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-disk-utility/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('efcd6da256fcf1a65fb39dc96b3665a62fa24ef226ba1686f0f26b663465fc93')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
  
   meson build --prefix=/usr -Denable-static=false
   
   cd build
   ninja -j$(($(getconf _NPROCESSORS_ONLN)+1))
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   cd build
   DESTDIR="${pkgdir}" ninja install
}

