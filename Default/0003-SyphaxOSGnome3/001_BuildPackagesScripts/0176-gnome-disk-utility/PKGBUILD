# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-disk-utility
pkgver=3.28.0
pkgrel=2
pkgdesc="The GNOME Disk Utility package provides applications used for dealing with storage devices."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-disk-utility/3.28"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('cc9d5572837400c4b6b9f3e66872ef637babc6f9a602243cc0df3fef7b45a929')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
  
   meson build --prefix=/usr -Denable-static=false
   ninja -C build
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   DESTDIR="${pkgdir}" ninja -C build install
}

