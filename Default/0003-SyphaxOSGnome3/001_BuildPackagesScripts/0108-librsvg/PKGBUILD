# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=librsvg
pkgver=2.40.19
pkgrel=2
pkgdesc="The librsvg package contains a library and tools used to manipulate, convert and view Scalable Vector Graphic (SVG) images."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/librsvg/2.40"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('612b4d8b8609036f5d899be3fe70d9866b5f6ac5c971154c1c0ef7242216c1f7')
depends=('rootfs')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr    \
               --enable-vala    \
               --disable-static
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

