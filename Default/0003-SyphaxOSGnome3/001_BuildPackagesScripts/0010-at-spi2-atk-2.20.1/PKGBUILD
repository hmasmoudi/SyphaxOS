# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=at-spi2-atk
pkgver=2.20.1
pkgrel=1
pkgdesc="The At-Spi2 Atk package contains a library that bridges ATK to At-Spi2 D-Bus service."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/at-spi2-atk/2.20"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
md5sums=('23309b6f8e1623871ace6347fb734dce')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   sed -i "/seems to be moved/s/^/#/" config/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

