# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=desktop-file-utils
pkgver=0.23
pkgrel=6
pkgdesc="The Desktop File Utils package contains command line utilities for working with Desktop entries."
arch=('x86_64')
url="http://freedesktop.org/software/desktop-file-utils/releases"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
md5sums=('599133d51cc9a41bfec186414906b6f1')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

