# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-session
pkgver=3.24.0
pkgrel=1
pkgdesc="The GNOME Session package contains the GNOME session manager."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-session/3.24"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('87e380a54628f0e6e4506887c409ec0f99024e7840d614edfeeb511dea884d2c')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --docdir=/usr/share/doc/gnome-session-3.24.0 --disable-session-selector

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

