# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libsoup
pkgver=2.57.1
pkgrel=1
pkgdesc="The libsoup is HTTP client/server library for GNOME."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libsoup/2.57"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('ca1ca037e89e8bc7b782559f3ec5d89c9d0b836f505b2f95e008ed517fd6658f')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static 

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

