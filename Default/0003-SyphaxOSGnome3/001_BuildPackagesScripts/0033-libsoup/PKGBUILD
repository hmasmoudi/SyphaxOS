# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libsoup
pkgver=2.58.1
pkgrel=1
pkgdesc="The libsoup is HTTP client/server library for GNOME."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libsoup/2.58"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('62c669f557de745b7b20ba9d5b74d839c95e4c9cea1a5ab7f3da5531a1aeefb9')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static 

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

