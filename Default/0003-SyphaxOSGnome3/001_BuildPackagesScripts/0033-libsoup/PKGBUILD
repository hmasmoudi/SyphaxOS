# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libsoup
pkgver=2.56.0
pkgrel=1
pkgdesc="The libsoup is HTTP client/server library for GNOME."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libsoup/2.56"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d8216b71de8247bc6f274ec054c08547b2e04369c1f8add713e9350c8ef81fe5')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static 

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

