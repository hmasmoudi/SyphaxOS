# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libsoup
pkgver=2.60.0
pkgrel=4
pkgdesc="The libsoup is HTTP client/server library for GNOME."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libsoup/2.60"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('b324edbecda0884143c0853b4a2bd5bd37fb3761f12f293c621ff34b9acdc84c')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --disable-static 

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

