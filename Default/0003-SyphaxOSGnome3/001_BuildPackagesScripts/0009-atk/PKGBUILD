# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=atk
pkgver=2.26.0
pkgrel=4
pkgdesc="ATK provides the set of accessibility interfaces that are implemented by other toolkits and applications."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/atk/2.26"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('eafe49d5c4546cb723ec98053290d7e0b8d85b3fdb123938213acb7bb4178827')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

