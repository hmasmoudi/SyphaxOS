# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=atk
pkgver=2.23.4
pkgrel=1
pkgdesc="ATK provides the set of accessibility interfaces that are implemented by other toolkits and applications."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/atk/2.23"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('6888f4e902fc4727b1687ff512d5d087050f4c0d11035566484988cf698c2c1a')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

