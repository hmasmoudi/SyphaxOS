# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=atk
pkgver=2.26.1
pkgrel=4
pkgdesc="ATK provides the set of accessibility interfaces that are implemented by other toolkits and applications."
arch=('x86_64')
url="https://ftp.gnome.org/pub/gnome/sources/atk/2.26"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('ef00ff6b83851dddc8db38b4d9faeffb99572ba150b0664ee02e46f015ea97cb')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

