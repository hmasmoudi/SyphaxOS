# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-desktop
pkgver=3.26.0
pkgrel=4
pkgdesc="The GNOME Desktop package contains a library that provides an API shared by several applications on the GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-desktop/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('8a99a084ea06fba20f5c547822dd8e36758676714729c7ae7b44ae3deca57be2')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr --with-gnome-distributor="SyphaxOS"
   
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

