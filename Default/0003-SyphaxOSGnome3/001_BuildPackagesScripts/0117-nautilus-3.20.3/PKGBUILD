# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=nautilus
pkgver=3.20.3
pkgrel=1
pkgdesc="The Nautilus package contains the GNOME file manager."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/nautilus/3.20"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('857637cc3f992686060b051141810774')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr        \
               --sysconfdir=/etc    \
               --disable-selinux    \
               --disable-tracker    \
               --disable-packagekit
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

