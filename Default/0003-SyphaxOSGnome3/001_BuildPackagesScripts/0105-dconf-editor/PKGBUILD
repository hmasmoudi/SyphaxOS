# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=dconf-editor
pkgver=3.23.4
pkgrel=4
pkgdesc="The DConf-Editor, as the name suggests, is a graphical editor for the DConf database."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/dconf-editor/3.23"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('fe60f25168b1ace5ee44a2c1eff6c1310d53e4a188e0e97734e9c06ff9e2b812')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr --sysconfdir=/etc

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

