# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=pcre2
pkgver=10.23
pkgrel=2
pkgdesc="The PCRE2 package contains a new generation of the Perl Compatible Regular Expression libraries."
arch=('x86_64')
url="http://ftp.csx.cam.ac.uk/pub/software/programming/pcre"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.bz2")
md5sums=('b2cd00ca7e24049040099b0a46bb3649')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr                           \
               --docdir=/usr/share/doc/pcre2-${pkgver} \
               --enable-unicode                        \
               --enable-jit                            \
               --enable-pcre2-16                       \
               --enable-pcre2-32                       \
               --enable-pcre2grep-libz                 \
               --enable-pcre2grep-libbz2               \
               --enable-pcre2test-libreadline          \
               --disable-static
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

