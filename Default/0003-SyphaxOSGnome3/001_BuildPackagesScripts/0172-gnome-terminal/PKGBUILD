# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-terminal
pkgver=3.24.2
pkgrel=1
pkgdesc="The GNOME Terminal package contains the terminal emulator for GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-terminal/3.24"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('281edac30a07ca45beaaaf0a13fe2219cf8b87ece5e55dccbfc49ef769dfec0f')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr       \
               --disable-migration \
               --with-nautilus-extension \
               --enable-distro-packaging \
               --disable-static 
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

