# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-terminal
pkgver=3.26.0
pkgrel=4
pkgdesc="The GNOME Terminal package contains the terminal emulator for GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-terminal/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('94c8d9e85b042160a0487af10f2002e1068f49805356b714a410766d74bc4e77')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr       \
               --disable-migration \
               --with-nautilus-extension \
               --enable-distro-packaging \
               --disable-static 
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

