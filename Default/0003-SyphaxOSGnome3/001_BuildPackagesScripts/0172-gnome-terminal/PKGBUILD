# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-terminal
pkgver=3.26.2
pkgrel=4
pkgdesc="The GNOME Terminal package contains the terminal emulator for GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-terminal/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('3a9ba414a814569476515275ad303d8056f296b2669234447712559aa97005b0')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr       \
               --disable-migration \
               --with-nautilus-extension \
               --enable-distro-packaging \
               --disable-static 
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

