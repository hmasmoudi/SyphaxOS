# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=clutter
pkgver=1.26.0
pkgrel=2
pkgdesc="The Clutter package contains an open source software library used for creating fast, visually rich and animated graphical user interfaces."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/clutter/1.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('67514e7824b3feb4723164084b36d6ce1ae41cb3a9897e9f1a56c8334993ce06')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr               \
               --sysconfdir=/etc           \
               --enable-egl-backend        \
               --enable-evdev-input        \
               --enable-wayland-backend    \
               --enable-wayland-compositor
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

