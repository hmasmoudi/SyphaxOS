# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=glibmm
pkgver=2.52.0
pkgrel=1
pkgdesc="The GLibmm package is a set of C++ bindings for GLib. "
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/glibmm/${pkgver:0:4}"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('81b8abf21c645868c06779abc5f34efc1a51d5e61589dab2a2ed67faa8d4811e')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -e '/^libdocdir =/ s/$(book_name)/glibmm-2.52.0/' \
       -i docs/Makefile.in
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

