# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-backgrounds
pkgver=3.26.2
pkgrel=4
pkgdesc="The GNOME Backgrounds package contains a collection of graphics files which can be used as backgrounds in the GNOME Desktop environment."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-backgrounds/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('3a8ba8d3463d70bce2377b168218e32367c0020f2d0caf611e7e39066081f94f')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   meson build --prefix=/usr
   cd build
   ninja -j$(($(getconf _NPROCESSORS_ONLN)+1))
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   cd build
   DESTDIR="${pkgdir}" ninja install
}

