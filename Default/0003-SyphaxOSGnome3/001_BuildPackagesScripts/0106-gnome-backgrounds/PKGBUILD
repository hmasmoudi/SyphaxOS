# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-backgrounds
pkgver=3.22.1
pkgrel=1
pkgdesc="The GNOME Backgrounds package contains a collection of graphics files which can be used as backgrounds in the GNOME Desktop environment."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-backgrounds/3.22"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('bfc89812b26383b74062c43f6c175b8fce19d4044b42f8bc9de2ab196a6eee25')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

