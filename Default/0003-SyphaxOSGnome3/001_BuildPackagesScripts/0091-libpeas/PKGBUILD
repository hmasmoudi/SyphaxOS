# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libpeas
pkgver=1.21.0
pkgrel=1
pkgdesc="libpeas is a GObject based plugins engine, and is targeted at giving every application the chance to assume its own extensibility."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/libpeas/1.21"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('afb9a8880d53e0599fb1e3ddddfb9d173db18b94d9323f4efd24f07fa241f70c')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"

   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

