# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=nautilus
pkgver=3.24.2.1
pkgrel=2
pkgdesc="The Nautilus package contains the GNOME file manager."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/nautilus/3.24"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('357d9d051fcc2c385ce9b3beb2db2ea1874b7cdf507ca10274a063023e1a61b3')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr        \
               --sysconfdir=/etc    \
               --disable-selinux    \
               --disable-tracker    \
               --disable-packagekit
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

