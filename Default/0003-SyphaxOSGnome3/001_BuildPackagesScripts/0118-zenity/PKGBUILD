# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=zenity
pkgver=3.26.0
pkgrel=2
pkgdesc="Zenity is a rewrite of gdialog, the GNOME port of dialog which allows you to display GTK+ dialog boxes from the command line and shell scripts."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/zenity/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('6a7f34626dd62b751fe22bcdb32f3558f8a8fdddcc9406893dd264f0ac18e830')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

