# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=zenity
pkgver=3.22.0
pkgrel=1
pkgdesc="Zenity is a rewrite of gdialog, the GNOME port of dialog which allows you to display GTK+ dialog boxes from the command line and shell scripts."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/zenity/3.22"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('1ecdfa1071d383b373b8135954b3ec38d402d671dcd528e69d144aff36a0e466')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="$pkgdir" install
}

