# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-color-manager
pkgver=3.26.0
pkgrel=4
pkgdesc="GNOME Color Manager is a session framework for the GNOME desktop environment that makes it easy to manage, install and generate color profiles."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-color-manager/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('652100e08520338b24218230f0586227879150d7d093ca637fc06130b72171cd')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/'libm'/s/^/libm = cc.find_library('m', required : false)#/" meson.build
   meson build --prefix=/usr -Denable-packagekit=false -Denable-tests=false
   cd build
   ninja -j$(($(getconf _NPROCESSORS_ONLN)+1))
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   cd build
   DESTDIR="${pkgdir}" ninja install
}

