# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=cmake
pkgver=3.9.1
pkgrel=1
pkgdesc="The CMake package contains a modern toolset used for generating Makefiles."
arch=('x86_64')
url="http://www.cmake.org/files/v3.9"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.gz")
sha256sums=('d768ee83d217f91bb597b3ca2ac663da7a8603c97e1f1a5184bc01e0ad2b12bb')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./bootstrap --prefix=/usr        \
               --system-libs        \
               --mandir=/share/man  \
               --no-system-jsoncpp  \
               --no-system-librhash \
               --docdir=/share/doc/$pkgname-$pkgver
            
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

