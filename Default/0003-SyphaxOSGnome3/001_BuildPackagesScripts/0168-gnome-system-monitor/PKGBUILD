# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-system-monitor
pkgver=3.26.0
pkgrel=6
pkgdesc="The GNOME System Monitor package contains GNOME's replacement for gtop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-system-monitor/3.26"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('f848a8c2ca5e164cf09d3a205dd49e4e4bf4b60d43b0969c10443eb519d0e6b3')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
      
   ./configure --prefix=/usr             \
               --enable-systemd          \
               --disable-static
               
   #--enable-broken-wnck
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

