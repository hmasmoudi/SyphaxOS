# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-system-monitor
pkgver=3.22.2
pkgrel=1
pkgdesc="The GNOME System Monitor package contains GNOME's replacement for gtop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-system-monitor/3.22"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('68a5b097157a6e445fc2467cbaecfede77d00b774c93e8aa69b6f784055dc982')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr    \
               --enable-systemd \
               --disable-static

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

