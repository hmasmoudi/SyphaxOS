# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-power-manager
pkgver=3.24.0
pkgrel=1
pkgdesc="The GNOME Power Manager package contains a tool used to report on power management on the system."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-power-manager/3.24"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('135ec3cd01f02e9cc006a2944cb8bd53382b01bb39c871131ee706417c9f0ab7')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

