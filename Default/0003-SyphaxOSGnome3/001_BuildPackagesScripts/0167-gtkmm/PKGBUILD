# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gtkmm
pkgver=3.22.0
pkgrel=1
pkgdesc="The Gtkmm package provides a C++ interface to GTK+ 3."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gtkmm/3.22"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('05da4d4b628fb20c8384630ddf478a3b5562952b2d6181fe28d58f6cbc0514f5')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -e '/^libdocdir =/ s/$(book_name)/gtkmm-3.22.0/' \
       -i docs/Makefile.in
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

