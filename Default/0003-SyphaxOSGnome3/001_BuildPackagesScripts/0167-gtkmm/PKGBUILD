# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gtkmm
pkgver=3.22.1
pkgrel=1
pkgdesc="The Gtkmm package provides a C++ interface to GTK+ 3."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gtkmm/3.22"
license=('GPL')
groups=('desktop')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('6a0c2cc0894a69b666e688e5e6e93621d7625db5e77fd37551310d75c00896b0')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -e '/^libdocdir =/ s/$(book_name)/gtkmm-3.22.1/' \
       -i docs/Makefile.in
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

