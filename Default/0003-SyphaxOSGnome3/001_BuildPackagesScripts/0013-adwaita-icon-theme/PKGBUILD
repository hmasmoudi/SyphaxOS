# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=adwaita-icon-theme
pkgver=3.26.0
pkgrel=4
pkgdesc="The Adwaita Icon Theme package contains an icon theme for Gtk+ 3 applications."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/adwaita-icon-theme/3.26"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
depends=('rootfs')
sha256sums=('9cad85de19313f5885497aceab0acbb3f08c60fcd5fa5610aeafff37a1d12212')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

