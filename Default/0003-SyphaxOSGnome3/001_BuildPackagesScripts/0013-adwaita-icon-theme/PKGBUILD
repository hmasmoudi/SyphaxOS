# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=adwaita-icon-theme
pkgver=3.24.0
pkgrel=1
pkgdesc="The Adwaita Icon Theme package contains an icon theme for Gtk+ 3 applications."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/adwaita-icon-theme/3.24"
license=('GPL')
groups=('desktop')
source=("$url/$pkgname-$pkgver.tar.xz")
sha256sums=('ccf79ff3bd340254737ce4d28b87f0ccee4b3358cd3cd5cd11dc7b42f41b272a')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}

