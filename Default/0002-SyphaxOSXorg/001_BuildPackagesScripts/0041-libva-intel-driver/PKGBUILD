# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libva-intel-driver
pkgver=1.8.2
pkgrel=2
pkgdesc="The libva-intel-driver is designed specifically for video cards based on an Intel GPU."
arch=('x86_64')
url="http://www.freedesktop.org/software/vaapi/releases/libva-intel-driver"
license=('GPL')
groups=('graphicslayer')
source=("$url/intel-vaapi-driver-${pkgver}.tar.bz2")
sha1sums=('1564e41f36b1ec646250418eeb344a916eb28407')
depends=('rootfs')

prepare() {
   cd "$srcdir/intel-vaapi-driver-$pkgver"
   
   autoreconf -fi
}

build() {
   cd "$srcdir/intel-vaapi-driver-$pkgver"
   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREFIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"

   ./configure $XORG_CONFIG
   
   make
}

package() {
   cd "$srcdir/intel-vaapi-driver-$pkgver"
   
   #Make the package
   make DESTDIR="$pkgdir" install
}

