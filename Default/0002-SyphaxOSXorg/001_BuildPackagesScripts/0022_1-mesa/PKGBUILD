# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=mesa
pkgver=18.1.1
pkgrel=2
pkgdesc="Mesa is an OpenGL compatible 3D graphics library."
arch=('x86_64')
url="https://mesa.freedesktop.org/archive"
license=('GPL')
groups=('graphicslayer')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d3312a2ede5aac14a47476b208b8e3a401367838330197c4588ab8ad420d7781')
makedepends=('python2-mako')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"
   
   autoreconf -fiv

   sed -i "/seems to be moved/s/^/: #/" bin/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"
   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREFIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"

   ./configure  --prefix=$XORG_PREFIX  \
                --sysconfdir=/etc \
                --with-gallium-drivers=i915,r600,nouveau,svga,swrast,virgl \
                --with-dri-drivers=i915,i965,r200,radeon,nouveau,swrast \
                --with-platforms=drm,wayland,x11 \
                --with-vulkan-drivers=intel \
                --enable-shared-glapi \
                --enable-opengl \
                --enable-egl \
                --enable-glx=dri \
                --enable-glx-tls \
                --enable-gles1 \
                --enable-gles2 \
                --enable-gbm \
                --enable-dri \
                --enable-dri3 \
                --enable-gallium-extra-hud \
                --enable-texture-float \
                --enable-xa \
                --enable-va \
                --enable-xvmc \
                --enable-vdpau \
                --enable-osmesa \
                --enable-driglx-direct
   
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   
   #Make the package
   make DESTDIR="$pkgdir" install
}

