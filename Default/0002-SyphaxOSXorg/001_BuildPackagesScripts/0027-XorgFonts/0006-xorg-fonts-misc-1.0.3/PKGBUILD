depends=('rootfs>=2.0.0')

build() {   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREFIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"

   cd "${srcdir}"
   for dir in font-*-misc*; do
      if [ -d "${dir}" ]; then
         pushd ${dir}
         ./configure $XORG_CONFIG
         make
         popd
      fi
   done
}

package() {
   cd "${srcdir}"
   
   #Make the package
      cd "${srcdir}"
   for dir in font-*-misc*; do
      if [ -d "${dir}" ]; then
         pushd ${dir}
         make DESTDIR="$pkgdir" install
         popd
      fi
   done
}

