# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libinput
pkgver=1.9.0
pkgrel=4
pkgdesc="libinput is a library that handles input devices for display servers and other applications that need to directly deal with input devices."
arch=('x86_64')
url="http://www.freedesktop.org/software/libinput"
license=('GPL')
groups=('graphicslayer')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('SKIP')
depends=('rootfs')

build() {
   cd "$srcdir/$pkgname-$pkgver"
   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREFIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"

   meson build --prefix=/usr         \
               -Dlibwacom=false      \
               -Ddocumentation=false \
               -Dtests=false         \
               -Ddebug-gui=false     \
               -Dudev-dir=/lib/udev

   ninja  -C build -j$(($(getconf _NPROCESSORS_ONLN)+1))
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   
   #Make the package
   DESTDIR="${pkgdir}" ninja -C build install
}

