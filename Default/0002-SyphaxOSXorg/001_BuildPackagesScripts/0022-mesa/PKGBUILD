# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=mesa
pkgver=17.2.0
pkgrel=8
pkgdesc="Mesa is an OpenGL compatible 3D graphics library."
arch=('x86_64')
url="https://mesa.freedesktop.org/archive"
license=('GPL')
groups=('graphicslayer')
source=("$url/${pkgname}-${pkgver}-rc6.tar.xz")
sha256sums=('SKIP')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"-rc6
   
   sed -i "/pthread_stubs_possible=/s/yes/no/" configure.ac
   sed -i "/seems to be moved/s/^/: #/" bin/ltmain.sh
}

build() {
   cd "$srcdir/$pkgname-$pkgver"-rc6
   
   source /etc/profile.d/xorg.sh
   echo "Using XORG_PREm			FIX ($XORG_PREFIX) & XORG_CONFIG ($XORG_CONFIG)"

   ./autogen.sh CFLAGS='-O2' CXXFLAGS='-O2' \
    --prefix=$XORG_PREFIX  \
    --sysconfdir=/etc \
    --with-gallium-drivers=r600,nouveau,svga,virgl \
    --with-dri-drivers=i915,i965,r200,radeon,nouveau,swrast \
    --with-platforms=x11,drm,wayland \
    --with-vulkan-drivers=intel \
    --enable-shared-glapi \
    --enable-egl \
    --enable-glx \
    --enable-glx-tls \
    --enable-gles1 \
    --enable-gles2 \
    --enable-gbm \
    --enable-dri \
    --enable-dri3 \
    --enable-gallium-extra-hud \
    --enable-texture-float \
    --enable-xa \
    --enable-vdpau \
    --enable-osmesa
   
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"-rc6
   
   #Make the package
   make DESTDIR="$pkgdir" install
}

