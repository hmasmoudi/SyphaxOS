# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=qemu
pkgver=2.8.1
pkgrel=1
pkgdesc="QEMU is a generic and open source machine emulator and virtualizer."
arch=('x86_64')
url="http://download.qemu-project.org"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('4d4d2f62c0f7977fb1d49ba4894b2d5e43b8bf8a442be77d42701262c9166440')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure                   \
      --prefix=/usr              \
      --sysconfdir=/etc          \
      --localstatedir=/var       \
      --libexecdir=/usr/lib/qemu \
      --python=/usr/bin/python2  \
      --smbd=/usr/bin/smbd       \
      --with-gtkabi=3.0          \
      --with-sdlabi=2.0          \
      --enable-modules

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
   
   #remove existing sytem directory
   rm -rf "${pkgdir}"/var
}

