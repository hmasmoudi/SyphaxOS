# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=evolution-ews
pkgver=3.26.2
pkgrel=2
pkgdesc="MS Exchange integration through Exchange Web Services"
url="http://ftp.gnome.org/pub/gnome/sources/evolution-ews/3.26"
arch=(i686 x86_64)
license=(LGPL2.1)
depends=(libmspack evolution)
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('5d80ff7c829e61561b848c9d6c615a6fc9a8522bb218a728a47bb414fc30b733')

build() {
  cd $pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DLIBEXEC_INSTALL_DIR=/usr/lib -DSYSCONF_INSTALL_DIR=/etc -DENABLE_STATIC=OFF .
  
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
