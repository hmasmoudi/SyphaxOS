# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=flashplayer
pkgver=25.0.0.127
pkgrel=1
pkgdesc="Flash Player for Linux"
arch=('x86_64')
url="https://fpdownload.adobe.com/get/${pkgname}/pdc/${pkgver}"
license=('GPL')
groups=('applications')
source=("$url/flash_player_npapi_linux.x86_64.tar.gz")
md5sums=('dd8a19ea0aaa0e532d5c72f4309a67ae')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir"
}

build() {
   cd "$srcdir"
}

package() {
   cd "$srcdir"
   mkdir -pv "${pkgdir}"/usr/{bin,lib,share}
   
   mkdir -pv "${pkgdir}"/usr/lib/mozilla/plugins/
   
   cp -rf usr/bin/* "${pkgdir}"/usr/bin/
   cp -rf usr/lib64/* "${pkgdir}"/usr/lib/
   cp -rf usr/share/* "${pkgdir}"/usr/share/
       
   cp -rf libflashplayer.so "${pkgdir}"/usr/lib/mozilla/plugins/libflashplayer.so
}

