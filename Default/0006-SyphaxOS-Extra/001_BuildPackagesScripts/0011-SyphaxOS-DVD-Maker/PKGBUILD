# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=SyphaxOS-DVD-Maker
pkgver=3.1.0
pkgrel=2
pkgdesc="SyphaxOS 3.1.0 Default DVD Maker. Set of tools to create squashfs and ISO image"
arch=('x86_64')
license=('GPL')
groups=('desktop')
depends=('SyphaxOS-Desktop')

prepare() {
   mkdir -pv "$srcdir/$pkgname-$pkgver"
}

build() {
   cd "$srcdir/$pkgname-$pkgver"
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   
   mkdir -pv "${pkgdir}"/opt
   
   cp -rf ../../SyphaxOS-DVD-Maker "${pkgdir}"/opt/ 
}

