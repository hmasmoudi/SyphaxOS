# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=firefox
pkgver=51.0.1
pkgrel=1
pkgdesc="Firefox is a stand-alone browser based on the Mozilla codebase."
arch=('x86_64')
url="https://ftp.mozilla.org/pub/firefox/releases/${pkgver}/linux-x86_64/fr"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.bz2"
        "firefox.desktop")
md5sums=('bad0eb2149951652d2fdd2e0e159b9d5'
         '614cf5eda9b607bf557062945bef253d')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}"
}

build() {
   cd "$srcdir/${pkgname}"
}

package() {
   cd "$srcdir/${pkgname}"
    
   mkdir -p "${pkgdir}"/opt/
   mkdir -p "${pkgdir}"/usr/share/applications/
   
   cp -rf "$srcdir/${pkgname}" "${pkgdir}"/opt/
   cp -rf ../../firefox.desktop "${pkgdir}"/usr/share/applications/firefox.desktop
}

