# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gedit
pkgver=3.20.2
pkgrel=1
pkgdesc="The Gedit package contains a lightweight UTF-8 text editor for the GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.20"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('39d3278c6b107008051a2e75ae459520')
depends=('rootfs>=2.0.0'
         'gtksourceview>=3.20.4')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --disable-spell
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

