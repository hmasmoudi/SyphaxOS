# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=file-roller
pkgver=3.22.2
pkgrel=1
pkgdesc="File Roller is an archive manager for GNOME with support for tar, bzip2, gzip, zip, jar, compress, lzop and many other archive formats."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/file-roller/3.22"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('27158cdcc366f82100312b1e0a02ad1f3aa7a6c32d4eba68fc5a2a8829685df9')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr         \
               --disable-packagekit  \
               --disable-static
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
   chmod -v 0755 "${pkgdir}"/usr/libexec/file-roller/isoinfo.sh
}

