# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=clutter-gst
pkgver=3.0.24
pkgrel=6
pkgdesc="The Clutter Gst is an integration library for using GStreamer with Clutter."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/clutter-gst/3.0"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e9f1c87d8f4c47062e952fb8008704f8942cf2d6f290688f3f7d13e83578cc6c')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

