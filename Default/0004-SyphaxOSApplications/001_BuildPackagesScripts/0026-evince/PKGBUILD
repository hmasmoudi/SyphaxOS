# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=evince
pkgver=3.24.0
pkgrel=1
pkgdesc="Evince is a document viewer for multiple document formats. It supports PDF, Postscript, DjVu, TIFF and DVI."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/evince/3.24"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('043895af7bbd6f1b57f9ab8778e78cf9c0af5dfcc347eaa94a17bf864c04dc8f')
depends=('rootfs>=2.0.0'
         'poppler>=0.47.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr                     \
               --enable-compile-warnings=minimum \
               --enable-introspection            \
               --disable-static 

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

