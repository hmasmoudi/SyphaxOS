# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=evince
pkgver=3.28.0
pkgrel=2
pkgdesc="Evince is a document viewer for multiple document formats. It supports PDF, Postscript, DjVu, TIFF and DVI."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/evince/3.28"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('fa23264b65e140afb8ec27b070a277bda748d9d4a86788240d9f3514346573a8')
depends=('rootfs' 'poppler')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr                     \
               --enable-compile-warnings=minimum \
               --enable-introspection            \
               --disable-static 

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

