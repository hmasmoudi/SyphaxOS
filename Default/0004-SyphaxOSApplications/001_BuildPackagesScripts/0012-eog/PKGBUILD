# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=eog
pkgver=3.26.0
pkgrel=4
pkgdesc="EOG is an application used for viewing and cataloging image files on the GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/eog/3.26"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e0e16210dfc5cd34327fff2874d8c54d64eb4ab9ad903d4f8218b10d77126095')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --disable-static
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

