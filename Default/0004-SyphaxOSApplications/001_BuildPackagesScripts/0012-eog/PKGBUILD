# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=eog
pkgver=3.24.0
pkgrel=1
pkgdesc="EOG is an application used for viewing and cataloging image files on the GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/eog/3.24"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c640bb76f202d06858e4d82be626d83256326f9cedfb46ae3b450a82ff3f11cc')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --disable-static
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

