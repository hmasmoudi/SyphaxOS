# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gst-plugins-bad
pkgver=1.8.3
pkgrel=1
pkgdesc="The GStreamer Bad Plug-ins package contains a set of plug-ins that aren't up to par compared to the rest."
arch=('x86_64')
url="http://gstreamer.freedesktop.org/src/${pkgname}"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('955281a43e98c5464563fa049e0a0911')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr \
               --with-package-name="GStreamer Bad Plugins 1.8.3 SyphaxOS" \
               --with-package-origin="http://gstreamer.freedesktop.org/src/gst-plugins-bad"
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

