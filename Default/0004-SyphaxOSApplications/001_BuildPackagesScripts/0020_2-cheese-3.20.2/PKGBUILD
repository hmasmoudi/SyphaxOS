# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=cheese
pkgver=3.20.2
pkgrel=2
pkgdesc="Cheese is used to take photos and videos with fun graphical effects."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.20"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('4446b2942cee1d91e920bf85bfe8ab2d')
depends=('rootfs>=2.0.0'
         'libvdpau-va-gl>=0.4.2'
         'clutter-gst>=3.0.20'
         'glu>=9.0.0'
         'v4l-utils>=1.10.1'
         'libvpx>=1.6.0'
         'orc>=0.4.26'
         'gst-libav>=1.8.3'
         'gst-plugins-good>=1.8.3'
         'gst-plugins-bad>=1.8.3')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

