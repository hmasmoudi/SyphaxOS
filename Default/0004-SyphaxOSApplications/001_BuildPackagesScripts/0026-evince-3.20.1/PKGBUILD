# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=evince
pkgver=3.20.1
pkgrel=2
pkgdesc="Evince is a document viewer for multiple document formats. It supports PDF, Postscript, DjVu, TIFF and DVI."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.20"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('eb05ece124d93d057211643b7ebdb145')
depends=('rootfs>=2.0.0'
         'poppler>=0.47.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr                     \
               --enable-compile-warnings=minimum \
               --enable-introspection            \
               --disable-static 

   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

