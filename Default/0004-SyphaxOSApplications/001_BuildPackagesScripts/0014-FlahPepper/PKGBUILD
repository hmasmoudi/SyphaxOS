# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=pepper-flash
pkgver=24.0.0.221
pkgrel=1
pkgdesc="Adobe's Pepper Flash plugin"
arch=('x86_64')
url="https://fpdownload.adobe.com/pub/flashplayer/pdc/$pkgver"
license=('GPL')
groups=('applications')
source=("$url/flash_player_ppapi_linux.x86_64.tar.gz")
md5sums=('d5e90e296dbd0b8362df2fa4f418d667')
depends=('rootfs>=2.0.0')

package() {
  install -Dm644 manifest.json libpepflashplayer.so -t "$pkgdir/usr/lib/PepperFlash/"
  install -Dm644 license.pdf -t "$pkgdir/usr/share/licenses/$pkgname/"
}

