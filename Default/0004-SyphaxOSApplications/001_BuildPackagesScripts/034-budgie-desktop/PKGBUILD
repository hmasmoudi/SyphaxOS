# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=budgie-desktop
pkgver=10.2.9
pkgrel=6
pkgdesc="The Budgie Desktop a modern desktop designed to keep out the way of the user."
arch=('x86_64')
install=${pkgname}.install
url="https://github.com/budgie-desktop/budgie-desktop/releases/download/v${pkgver}/"
license=('APACHE')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz"
        "panel.ini")
md5sums=('b2bbedd7dd97868ab9162563798e9888'
         '90ac453e4ab2095c70525796c7014bfb')
depends=('gnomedesktop>=2.0.0' 'gnome-screensaver>=3.6.1' 'SyphaxOS-Theme>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" ltmain.sh
   
   cp "$srcdir"/panel.ini "$srcdir/${pkgname}-${pkgver}"/data/panel.ini
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

