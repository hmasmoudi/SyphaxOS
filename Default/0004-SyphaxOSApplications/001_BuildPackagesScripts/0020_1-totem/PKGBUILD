# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=totem
pkgver=3.22.1
pkgrel=2
pkgdesc="Videos is a video playback application designed to work with GNOME 3"
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/totem/3.22"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('10a509d7797b59cda57b324a426f77e567729545459a64afe4a5ac986bd7c53b')
depends=('rootfs>=2.0.0'
         'libvdpau-va-gl'
         'clutter-gst'
         'glu'
         'v4l-utils'
         'libvpx'
         'orc'
         'gst-libav'
         'gst-plugins-good'
         'gst-plugins-bad')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

