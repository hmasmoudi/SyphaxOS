# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-calculator
pkgver=3.28.1
pkgrel=3
pkgdesc="GNOME Calculator is a powerful graphical calculator with financial, logical and scientific modes."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-calculator/3.28"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('2cee9ef809cea1adbbcc8de65e05f0bb7ed8e78cd2c1a3a1105fba59d36df717')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   meson build --prefix=/usr
      
   ninja -C build
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   DESTDIR="${pkgdir}" ninja -C build install
}

