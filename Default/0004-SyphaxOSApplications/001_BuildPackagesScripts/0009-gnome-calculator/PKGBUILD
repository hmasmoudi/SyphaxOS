# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-calculator
pkgver=3.28.0
pkgrel=2
pkgdesc="GNOME Calculator is a powerful graphical calculator with financial, logical and scientific modes."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-calculator/3.28"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('76879e01360aadbebf4ace7f0b452823727ff7eadfb80011136597605cddcee2')
depends=('rootfs')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
      
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

