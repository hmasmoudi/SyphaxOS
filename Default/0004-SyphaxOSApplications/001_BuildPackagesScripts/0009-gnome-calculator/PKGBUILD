# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-calculator
pkgver=3.24.0
pkgrel=1
pkgdesc="GNOME Calculator is a powerful graphical calculator with financial, logical and scientific modes."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gnome-calculator/3.24"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('44758ac719edd20067381073de3c643f842308f26da039412b1978a415202d10')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
      
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

