# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gnome-calculator
pkgver=3.20.2
pkgrel=1
pkgdesc="GNOME Calculator is a powerful graphical calculator with financial, logical and scientific modes."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.20"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz"
        "history-entry.ui"
        "history-view.ui")
md5sums=('b8b5818b86c8385d02f20a0b79fd15e0'
         'ee1351876fe4eea583f8430b820bc966'
         '51ac88272208f1e917c54c15fbcf337c')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   cp -v ../../history-{entry,view}.ui data/
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

