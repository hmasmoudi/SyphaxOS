# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=clutter-gst
pkgver=3.0.22
pkgrel=1
pkgdesc="The Clutter Gst is an integration library for using GStreamer with Clutter."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.0"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('f1fc57fb32ea7e3d9234b58db35eb9ef3028cf0b266d85235f959edc0fe3dfd4')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

