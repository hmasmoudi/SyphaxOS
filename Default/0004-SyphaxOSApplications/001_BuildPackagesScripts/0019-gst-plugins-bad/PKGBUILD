# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gst-plugins-bad
pkgver=1.11.2
pkgrel=1
pkgdesc="The GStreamer Bad Plug-ins package contains a set of plug-ins that aren't up to par compared to the rest."
arch=('x86_64')
url="http://gstreamer.freedesktop.org/src/${pkgname}"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c23fc89a5fdd8e1c77a3b12e8667df33990526c88b328ee7957dbbf9b29cc16a')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr \
               --with-package-name="GStreamer Bad Plugins 1.11.2 SyphaxOS" \
               --with-package-origin="http://gstreamer.freedesktop.org/src/gst-plugins-bad"
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

