# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=SyphaxOS-Theme
pkgver=2.0.0
pkgrel=2
pkgdesc="SyphaxOS theme based on adapta gtk theme and Paper icons Packs"
url="https://bintray.com/syphaxos"
license=('CUSTOM')
arch=('x86_64')
source=("SyphaxOS-Background.jpg" "SyphaxOS-settings.gschema.override")
install=${pkgname}.install
md5sums=('96ddcb5ecb06aaf4a97ff5b49fbc1b6b' '3bcc90e60e6cb9a9847756b6d6ebe573')

depends=('rootfs>=2.0.0'
         'adapta-gtk-theme'
         'paper-icon-theme'
         'paper-cursor-theme')

package() {
   echo "Packaging SyphaxOS Theme"
      
   install -Dm644 "$srcdir"/SyphaxOS-settings.gschema.override \
                  "$pkgdir"/usr/share/glib-2.0/schemas/SyphaxOS-settings.gschema.override
                  
   
   install -Dm644 "$srcdir"/SyphaxOS-Background.jpg \
                  "$pkgdir"/usr/share/backgrounds/SyphaxOS-Background.jpg
}
