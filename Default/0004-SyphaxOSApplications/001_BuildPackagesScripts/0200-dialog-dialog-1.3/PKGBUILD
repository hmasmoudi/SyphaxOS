# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=dialog
pkgver=1.3
pkgrel=1
pkgdesc="Dialog management under Linux shell"
arch=('x86_64')
url="https//fixme"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
md5sums=('7a9667aaa4a015e72a0ab24912ce7073')
depends=('rootfs>=2.0.0')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make configure
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make all
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

