# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=gedit
pkgver=3.22.1
pkgrel=6
pkgdesc="The Gedit package contains a lightweight UTF-8 text editor for the GNOME Desktop."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/gedit/3.22"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('aa7bc3618fffa92fdb7daf2f57152e1eb7962e68561a9c92813d7bbb7fc9492b')
depends=('rootfs' 'gtksourceview')

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr --disable-spell
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

