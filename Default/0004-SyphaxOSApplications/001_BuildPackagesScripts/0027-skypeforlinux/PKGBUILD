pkgname=skypeforlinux
pkgver=5.0.0.5
pkgrel=1
pkgdesc="Skype for Linux Alpha."
arch=('x86_64')
url="https://repo.skype.com/latest"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-64.deb")
md5sums=('ac0c07a5b285a22ef0414dd5cd33d13f')
depends=('rootfs>=2.0.0')

package() {
   cd "$srcdir"
   
   tar -xJC "${pkgdir}" -f data.tar.xz
   rm -rf "${pkgdir}/opt"
}

