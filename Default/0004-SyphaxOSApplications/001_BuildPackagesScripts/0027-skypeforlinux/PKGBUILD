pkgname=skypeforlinux
pkgver=1.17.0.1
pkgrel=1
pkgdesc="Skype for Linux Alpha."
arch=('x86_64')
url="https://repo.skype.com/latest"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-64-alpha.deb")
md5sums=('004945897ba1d0bbb0707fff2c99d3ad')
depends=('rootfs>=2.0.0')

package() {
   cd "$srcdir"
   
   tar -xJC "${pkgdir}" -f data.tar.xz
   rm -rf "${pkgdir}/opt"
}

