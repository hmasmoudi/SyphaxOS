# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=SyphaxOS-Desktop
pkgver=3.0.0
pkgrel=16
pkgdesc="SyphaxOS 3.0.0 Default Desktop Package based on Gnome Desktop."
arch=('x86_64')
install=${pkgname}.install
license=('GPL')
groups=('desktop')
source=("SyphaxOS-Desktop-settings.gschema.override")
sha256sums=('7de005ea3a6e785366a7ceca1110fb5d8ef12ee0b89d3104548807ae07e42059')
depends=(
         'gnomedesktop'
         'pacman'
         'gnome-calculator'
         'gedit'
         'eog'
         'gthumb'
         'gnome-screenshot'
         'file-roller'
         'p7zip'
         'totem'
         'cheese'
         'transmission'
         'evince'
         'skypeforlinux'
         'rhythmbox'
         'ttf-ms-fonts'
         'wps-office'
         'google-chrome'
         'flatpak'
         'brasero'
         'dash-to-panel'
         'TopIcons-plus'
         'SyphaxOS-Theme'
         )

prepare() {
   mkdir -pv "$srcdir/$pkgname-$pkgver"
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   
   echo "Packaging SyphaxOS Desktop"
      
   install -Dm644 "$srcdir/SyphaxOS-Desktop-settings.gschema.override" \
                  "$pkgdir/usr/share/glib-2.0/schemas/SyphaxOS-Desktop-settings.gschema.override"
}

