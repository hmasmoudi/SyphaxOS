# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=cheese
pkgver=3.24.0
pkgrel=4
pkgdesc="Cheese is used to take photos and videos with fun graphical effects."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/cheese/3.24"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('26d0324c11d858a53a8a78f60babda63310a2b6f46c8fa3a4f6aa36ca9d0f372')
depends=('rootfs>=2.0.0'
         'libvdpau-va-gl'
         'clutter-gst'
         'glu'
         'v4l-utils'
         'libvpx'
         'orc'
         'gst-libav'
         'gst-plugins-good'
         'gst-plugins-bad')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

