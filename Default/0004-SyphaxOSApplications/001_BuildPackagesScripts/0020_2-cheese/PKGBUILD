# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=cheese
pkgver=3.26.0
pkgrel=6
pkgdesc="Cheese is used to take photos and videos with fun graphical effects."
arch=('x86_64')
url="http://ftp.gnome.org/pub/gnome/sources/cheese/3.26"
license=('GPL')
groups=('applications')
source=("$url/${pkgname}-${pkgver}.tar.xz")
sha256sums=('8ef52fc41de1817c4e4274e23eb7c29d28b64ae0f0d1fec52e184e99aea6c605')
depends=('rootfs'
         'libvdpau-va-gl'
         'clutter-gst'
         'glu'
         'v4l-utils'
         'libvpx'
         'orc'
         'gst-libav'
         'gst-plugins-good'
         'gst-plugins-bad')

prepare() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   sed -i "/seems to be moved/s/^/#/" build-aux/ltmain.sh
}

build() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   ./configure --prefix=/usr
   
   make
}

package() {
   cd "$srcdir/${pkgname}-${pkgver}"
   
   make DESTDIR="${pkgdir}" install
}

