# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=bash
pkgver=4.4
pkgrel=4
pkgdesc="The Bash package contains the Bourne-Again SHell."
arch=('x86_64')
url="http://ftp.gnu.org/gnu/bash"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.gz")
md5sums=('148888a7c95ac23705559b6f477dfe25')
depends=('rootfs')

prepare() {
   cd "$srcdir/$pkgname-$pkgver"

   patch -p0 -i ../../bash-4.4-upstream_fixes-12.patch
}

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr                        \
               --docdir=/usr/share/doc/bash-$pkgver \
               --without-bash-malloc                \
               --with-installed-readline

   make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"

        make DESTDIR="$pkgdir" install

        mkdir -pv $pkgdir/bin
        mv -vf $pkgdir/usr/bin/bash $pkgdir/bin
}
