# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=linux-headers
pkgver=4.15.2
pkgrel=2
pkgdesc="The Linux API Headers expose the kernel's API for use by Glibc."
arch=('x86_64')
url="https://www.kernel.org/pub/linux/kernel/v4.x"
license=('GPL')
groups=('core')
source=("$url/linux-${pkgver:0:4}.tar.xz")
md5sums=('SKIP')
depends=('rootfs')

build() {
   cd "$srcdir/linux-${pkgver:0:4}"
   make mrproper
}

package() {
   cd "$srcdir/linux-${pkgver:0:4}"

   make INSTALL_HDR_PATH=dest headers_install

   find dest/include \( -name .install -o -name ..install.cmd \) -delete

   mkdir -p $pkgdir/usr/include
   cp -rv dest/include/* $pkgdir/usr/include
}
