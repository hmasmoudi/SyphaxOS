# Maintainer: Hatem Masmoudi <hatem.masmoudi@gmail.com>

pkgname=libpipeline
pkgver=1.4.1
pkgrel=2
pkgdesc="The Libpipeline package contains a library for manipulating pipelines of subprocesses in a flexible and convenient way."
arch=('x86_64')
url="http://download.savannah.gnu.org/releases/libpipeline"
license=('GPL')
groups=('core')
source=("$url/$pkgname-$pkgver.tar.gz")
md5sums=('e54590ec68d6c1239f67b5b44e92022c')
depends=('rootfs>=2.0.0')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   ./configure --prefix=/usr

   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"

   make DESTDIR="$pkgdir" install
}
